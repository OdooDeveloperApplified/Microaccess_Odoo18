<?xml version="1.0"?>
<odoo>
    <template id="inventory_delivery_challan_report"> 
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page" style="font-size:100%;page-break-inside: avoid; page-break-after: avoid;">
                        <div class="row mb-1 text-center">
                            <h4><b>DELIVERY CHALLAN</b></h4>
                        </div>
                       
                        <div class="row mb-1">
                            <div class="col-4 text-center border-end border-dark">
                                <img t-if="res_company.logo" t-att-src="image_data_uri(res_company.logo)" style="height:65px; width: 180px;" alt="Logo"/>
                            </div>
                            <div class="col-8 ms-2 d-flex align-items-center vertical-align:middle;">
                                <span t-field="res_company.street"/><br/>
                                <span t-field="res_company.street2"/>
                                <span t-field="res_company.city"/>-<span t-field="res_company.zip"/>
                                <span t-field="res_company.state_id.name"/>
                                <span t-field="res_company.country_id.name"/><br/>
                                <span t-field="res_company.phone"/>,<span t-field="res_company.mobile"/><br/>
                                <span t-field="res_company.email"/>
                            </div>
                        </div>
                        
                        <div class="row mb-1 border border-dark" style="vertical-align:middle;">
                            <div class="col-6 ms-2 border-end border-dark" style="vertical-align:middle;">
                                <span><strong>Consignee</strong></span><br/>
                                <span t-field="o.partner_id.name"/><br/>
                                <span t-field="o.partner_id.street"/><span t-field="o.partner_id.street2"/><br/>
                                <span t-field="o.partner_id.city"/>|<span t-field="o.partner_id.state_id"/>|<span t-field="o.partner_id.zip"/>
                            </div>
                            <div class="col-6 px-3 py-2">
                                <div class="pb-1 mb-1 border-bottom border-dark">
                                    <b>No.:</b> <span t-field="o.name"/>
                                </div>
                                <div class="pb-1 mb-1 border-bottom border-dark">
                                    <b>Date.:</b> <span t-field="o.date_done" t-options="{'widget': 'date'}"/>
                                </div>
                                <div class="pb-1 mb-1 border-bottom border-dark">
                                    <b>Customer PO Date:</b> <span t-field="o.cus_po_date" t-options="{'widget': 'date'}"/>
                                </div>
                                <div>
                                    <b>Customer PO Number:</b> <span t-field="o.cus_po_no"/>
                                </div>
                            </div>
                        </div>
                        <table width="100%" style="border:1px solid black;margin-top:2px;page-break-inside: avoid;" height="400px">    
                            <t t-set="sr" t-value="1"/>
                            <t t-set="total_qty" t-value="0"/>
                            <t t-set="count" t-value="0"/>
                            <thead>
                                <tr height="10" style="background-color:#E9E9E9;">
                                    <th width="1%" style="text-align:center;vertical-align:middle;border:1px solid black;">Sr. No.</th>
                                    <th width="65%" style="text-align:center;vertical-align:middle;border:1px solid black;">Description</th>
                                    <th width="10%" style="text-align:center;vertical-align:middle;border:1px solid black;">Qty</th>
                                    <th width="24%" style="text-align:center;vertical-align:middle;border:1px solid black;">Remarks</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.move_ids_without_package.mapped('product_id')" t-as="l2"/>
                                    <tr height="10" t-foreach="o.move_line_ids_without_package.mapped('product_id')" t-as="l1">
                                        <td width="1%" style="text-align:center; border:1px solid black;vertical-align:middle;"><span t-esc="sr"/><br/><br/></td>
                                        <td width="65%" style="text-align:left; margin-top:-100px; border:1px solid black;vertical-align:middle;">&amp;nbsp;
                                            <b><span t-esc="l1.name"/></b><br/>
                                             <t t-foreach="o.move_line_ids_without_package.filtered(lambda x: x.product_id.id == l1.id)" t-as="l">
                                                <span t-if="l.lot_id.name"><span t-esc="l.lot_id.name"/>,</span>
                                            </t>
                                        </td>
                                        <t t-set="u" t-value="0"/>
                                         <td width="10%" style="text-align:center;vertical-align:middle;border:1px solid black;">
                                            <t t-foreach="o.move_ids_without_package.filtered(lambda x: x.product_id.id == l1.id)" t-as="d">
                                                <t t-set="u" t-value="u + d.quantity"/>
                                            </t>
                                             <span t-esc="u" t-options="{'widget': 'float', 'precision': 0}"/>
                                         </td>

                                        <td width="24%" style="text-align:left;vertical-align:middle;margin-left: 5px;border:1px solid black;">
                                            <t t-if="count==0">
                                                <t t-foreach="o.remarks" t-as="r">
                                                     <span t-esc="r.name"/>
                                                 </t>
                                                <t t-set="count" t-value="1"/>
                                            </t>
                                            <t else="">
                                                <span>Â </span>
                                            </t>
                                        </td>
                                        <t t-set="sr" t-value="sr + 1"/>
                                    </tr>
                                    <tr>
                                       <td width="1%" style="text-align:center;vertical-align:middle;border:1px solid black;">&amp;nbsp;</td>
                                       <td width="65%" style="text-align:left;vertical-align:middle;border:1px solid black;">&amp;nbsp;</td>
                                       <td width="10%" style="text-align:center;vertical-align:middle;border:1px solid black;">&amp;nbsp;</td>
                                       <td width="24%" style="text-align:right;vertical-align:middle;border:1px solid black;">&amp;nbsp;</td>
                                    </tr>
                                    <tr height="10">
                                       <td width="1%" style="text-align:center;vertical-align:middle;border:1px solid black;">&amp;nbsp;</td>
                                       <td width="65%" style="text-align:left;vertical-align:middle;border:1px solid black;">&amp;nbsp;</td>
                                       <td width="10%" style="text-align:center;vertical-align:middle;border:1px solid black;">
                                           <t t-foreach="o.move_ids_without_package" t-as="l2">
                                               <t t-set="total_qty" t-value="total_qty + l2.quantity"/>
                                           </t>
                                           <span t-esc="'%.0f'%total_qty"/>
                                       </td>
                                       <td width="24%" style="text-align:right;vertical-align:middle;border:1px solid black;">&amp;nbsp;</td>
                                    </tr>
                            </tbody>
                        </table>

                        <div style="border:1px solid black;margin-top:2px;margin-bottom:1px;">
                            <span>RECEIVED THE ABOVE MENTIONED GOODS IN ORDER</span>
                        </div>

                        <div style="page-break-inside: avoid">
                            <div class="row border border-dark" style="font-size: 14px; ">
                                <div class="col-6 text-start px-2 py-2">
                                    <b>FOR CUSTOMER</b><br/>
                                    <b>Name:</b><br/>
                                    <b>Phone:</b><br/>
                                    <b>Signature:</b><br/>
                                </div>
                                <div class="col-6 text-end">
                                    <div><b>FOR, MICRO ACCESS PVT.LTD.</b></div>
                                    <div class="text-end">
                                        <img t-if="res_company.stamp"
                                            t-att-src="image_data_uri(res_company.stamp)"
                                            style="width: 80px; height: 80px; margin-left: 10px;" alt="Stamp"/>
                                    </div>
                                    <div style="padding-bottom:2px;">Authorised Signatory</div>
                                </div>
                            </div>
                            <!-- <div class="row border-end border-start border-dark px-2 " style="font-size: 12px; font-weight: bold;">
                                <div class="col-3">
                                    <span>Doc.No.:</span>
                                </div>
                                <div class="col-3 border-start border-dark px-2">
                                    <span>Rev.No.:</span>
                                </div>
                                <div class="col-3 border-start border-dark px-2">
                                    <span>Rev. Date.:</span>
                                </div>
                                <div class="col-3 border-start border-dark px-2">
                                    <span>Last Log On:</span>
                                </div>
                            </div> -->
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="paperformat_inventory_delivery_challan" model="report.paperformat">
        <field name="name"> Delivery Challan</field>
        <field name="default" eval="True" />
        <field name="format">A5</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">3</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">4</field>
        <field name="dpi">90</field>
    </record>

    <!-- Report Action -->
    <record id="inventory_delivery_challan_action" model="ir.actions.report">
        <field name="name">Delivery Challan</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">Microaccess_Inventory.inventory_delivery_challan_report</field>
        <field name="report_file">Microaccess_Inventory.inventory_delivery_challan_report</field>
        <field name="paperformat_id" ref="Microaccess_Inventory.paperformat_inventory_delivery_challan"/>
        <field name="binding_model_id" ref="model_stock_picking"/>
        <field name="binding_type">report</field>  
    </record>
</odoo>
        