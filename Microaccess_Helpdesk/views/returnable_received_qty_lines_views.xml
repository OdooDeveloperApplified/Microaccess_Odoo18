<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Returnable Goods Lines Form View -->
    <record id="view_return_received_qty_lines_form" model="ir.ui.view">
        <field name="name">return.received.qty.lines.form</field>
        <field name="model">return.received.qty.line</field>
        <field name="arch" type="xml">
            <form string="Return Received Quantity Line">
                <sheet>
                    <group>
                        <group>
                            <field name="returnable_goods_id"/>
                            <field name="product_name"/>
                            <field name="hsn_code_id"/>
                            <field name="qty"/>
                            <field name="amount"/>
                            <field name="subsidiary_challan_no"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                            <field name="serial_no"/>
                            <field name="uom_id"/>
                            <field name="rate"/>
                            <field name="return_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Draft Returnable Goods Action -->
    <record id="action_returnable_goods_line" model="ir.actions.act_window">
        <field name="name">Returnable Goods Line</field>
        <field name="res_model">returnable.goods.line</field>
        <field name="view_mode">form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and manage Returnable Goods Line.
            </p>
        </field>
    </record>
</odoo>
