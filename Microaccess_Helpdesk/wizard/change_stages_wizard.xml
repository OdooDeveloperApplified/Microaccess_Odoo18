<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Code to create wizard for change stages button -->
    <record id="view_change_stages_wizard" model="ir.ui.view">
        <field name="name">change.stages.wizard.form</field>
        <field name="model">helpdesk.ticket.wizard</field>
        <field name="arch" type="xml">
            <form string="Note Logs">
                <group>
                    <field name="stage_id"/>
                    <field name="note"/>
                    <field name="ticket_solve_remarks" widget="many2many_tags" invisible="stage_id != 4"/>
                </group>
                <footer>
                    <button name="action_change_stage" string="Save" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Code to define action of the created wizard -->
    <record id="change_stages_wizard_action" model="ir.actions.act_window">
        <field name="name">Change Stages Wizard</field>
        <field name="res_model">helpdesk.ticket.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_change_stages_wizard"/>
        <field name="target">new</field>
        <field name="context">{'default_ticket_id': active_id}</field>
    </record>
</odoo>
