        <record id="helpdesk_ticket_rule_user_own" model="ir.rule">
            <field name="name">Helpdesk Tickets – Assigned User Only</field>
            <field name="model_id" ref="helpdesk.model_helpdesk_ticket"/>
            <field name="domain_force">[('user_ids', 'in', [user.id])]</field>
            <field name="groups" eval="[(4, ref('helpdesk.group_helpdesk_user'))]"/>
        </record>
        <record id="helpdesk_ticket_rule_admin_all" model="ir.rule">
            <field name="name">Helpdesk Tickets – Admin Access</field>
            <field name="model_id" ref="helpdesk.model_helpdesk_ticket"/>
            <field name="domain_force">[(1, '=', 1)]</field>  <!-- Always true -->
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>
        <record id="helpdesk_ticket_rule_user_only" model="ir.rule">
            <field name="name">Helpdesk: User can only see assigned tickets</field>
            <field name="model_id" ref="helpdesk.model_helpdesk_ticket"/>
            <field name="domain_force">[('user_ids', 'in', [user.id])]</field>
            <field name="groups" eval="[(4, ref('helpdesk.group_helpdesk_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>