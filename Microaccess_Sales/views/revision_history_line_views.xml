<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Quotation Revision History Lines Form View -->
    <record id="revision_history_lines_form" model="ir.ui.view">
        <field name="name">revision.history.lines.form</field>
        <field name="model">revision.history.line</field>
        <field name="arch" type="xml">
            <form string="Revision History Line" create="0" delete="0" edit="0">
                <sheet>
                    <group>
                        <group>
                            <field name="revision_history_ids"/>
                            <!-- <field name="description"/> -->
                            <field name="unit_price"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                            <field name="qty"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" widget="text"/>
                    </group>  
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Quotation Revision History Lines tree view -->
    <record id="revision_history_lines_list" model="ir.ui.view">
        <field name="name">revision.history.lines.list</field>
        <field name="model">revision.history.line</field>
        <field name="arch" type="xml">
                <list create="1" delete="0" edit="1">
                    <field name="revision_history_ids" readonly="1"/>
                    <field name="product_id"/>
                    <field name="description" widget="text"/>
                    <field name="qty"/>
                    <field name="unit_price"/>
                </list>
        </field>
    </record>
    
    <!-- Revision History Lines Action -->
    <record id="action_revision_history_line" model="ir.actions.act_window">
        <field name="name">Revision History Line</field>
        <field name="res_model">revision.history.line</field>
        <field name="view_mode">form,list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and manage Revision History Line.
            </p>
        </field>
    </record>
</odoo>
