<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Record to add footer image field in Configure document layout popup -->
    <record id="view_footer_image_inherit" model="ir.ui.view">
        <field name="name">footer.image.inherit</field>
        <field name="model">base.document.layout</field>
        <field name="inherit_id" ref="web.view_base_document_layout"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='report_footer']" position="after">
                <field name="footer_image" widget="image" options="{'size': [0, 50]}"/>
            </xpath>
        </field>
    </record> 
</odoo>
