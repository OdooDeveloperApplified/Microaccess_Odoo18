<odoo>
    <!-- Main group -->
        <record model="ir.module.category" id="module_category_users">
            <field name="name">View Access</field>
            <field name="sequence">5</field>
        </record>

        <record id="group_crm_view_only" model="res.groups">
            <field name="name">CRM View only</field>
            <field name="category_id" ref="module_category_users"/>
        </record>

        <record id="group_sales_view_only" model="res.groups">
            <field name="name">Sales View only</field>
            <field name="category_id" ref="module_category_users"/>
        </record>

        <record id="group_purchase_view_only" model="res.groups">
            <field name="name">Purchase View only</field>
            <field name="category_id" ref="module_category_users"/>
        </record>

        <!-- ========== CRM VIEW ONLY ========== -->
    <record id="crm_view_only_rule" model="ir.rule">
        <field name="name">CRM View Only - Read Access</field>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="groups" eval="[(4, ref('Microaccess_CRM.group_crm_view_only'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>
    <record id="access_crm_records" model="ir.model.access">
            <field name="name">Access CRM records</field>
            <field name="model_id" ref="model_crm_lead"/>
            <field name="group_id" ref="Microaccess_CRM.group_crm_view_only"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

    <!-- ========== SALES VIEW ONLY ========== -->
    <record id="sales_view_only_rule" model="ir.rule">
        <field name="name">Sales View Only - Read Access</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="groups" eval="[(4, ref('Microaccess_CRM.group_sales_view_only'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <!-- ========== PURCHASE VIEW ONLY ========== -->
    <record id="purchase_view_only_rule" model="ir.rule">
        <field name="name">Purchase View Only - Read Access</field>
        <field name="model_id" ref="purchase.model_purchase_order"/>
        <field name="groups" eval="[(4, ref('Microaccess_CRM.group_purchase_view_only'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>
    
</odoo>
