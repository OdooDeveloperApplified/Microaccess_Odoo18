<!-- views/sale_order_change_report_wizard.xml -->
<odoo>
    <record id="view_sale_order_change_report_wizard" model="ir.ui.view">
        <field name="name">sale.order.change.report.wizard.form</field>
        <field name="model">sale.order.change.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Sale Order Change Report">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button string="Generate Excel" type="object" name="action_generate_excel_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_order_change_report_wizard" model="ir.actions.act_window">
        <field name="name">Sale Order Change Report</field>
        <field name="res_model">sale.order.change.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_sale_order_change_report_root" name="Reports" parent="sale.menu_sale_report" sequence="100"/>
    <menuitem id="menu_sale_order_change_report" name="Sale Order Change Report"
              parent="menu_sale_order_change_report_root"
              action="action_sale_order_change_report_wizard"/>
</odoo>
