<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Repair Tags Form View -->
    <record id="view_repair_tags_form" model="ir.ui.view">
        <field name="name">repair.tag.form</field>
        <field name="model">repair.tag</field>
        <field name="arch" type="xml">
            <form string="Repair Tags">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>

                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Repair Tags Tree View -->
    <record id="view_repair_tags_tree" model="ir.ui.view">
        <field name="name">repair.tags.tree</field>
        <field name="model">repair.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Repair Tags Action -->
    <record id="action_repair_tag" model="ir.actions.act_window">
        <field name="name">Repair Tag</field>
        <field name="res_model">repair.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and manage Repair tags.
            </p>
        </field>
    </record>

    <!-- Repair Tags Menu under Helpdesk > Configuration -->
    <menuitem id="menu_repair_tags"
              name="Repair Tags"
              parent="helpdesk.helpdesk_menu_config"
              action="action_repair_tag"
              sequence="35"
              />
</odoo>
