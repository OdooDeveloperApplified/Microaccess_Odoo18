<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Category Master Form View -->
    <record id="view_category_master_form" model="ir.ui.view">
        <field name="name">category.master.form</field>
        <field name="model">category.master</field>
        <field name="arch" type="xml">
            <form string="Category">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>

                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Category Master Tree View -->
    <record id="view_category_master_tree" model="ir.ui.view">
        <field name="name">category.master.tree</field>
        <field name="model">category.master</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    
    <!-- Category Master Action -->
    <record id="action_category_master" model="ir.actions.act_window">
        <field name="name">Category</field>
        <field name="res_model">category.master</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and manage Category for Contacts Module.
            </p>
        </field>
    </record>
    
    <!-- ###################################################################################################################### -->

    <!-- Master Menu under Contacts > Configuration -->
    <menuitem id="menu_contacts_master_root"
              name="Master"
              parent="contacts.res_partner_menu_config"
              sequence="7"
              />

    <!-- Category Menu under Contacts > Configuration > Master -->
    <menuitem id="menu_category_master"
              name="Category"
              parent="microaccess.menu_contacts_master_root"
              action="action_category_master"
              sequence="1"
              />
</odoo>
