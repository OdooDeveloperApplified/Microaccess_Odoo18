<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Block Quantity wizard form view -->
    <record id="view_block_quantity_wizard_form" model="ir.ui.view">
        <field name="name">block.quantity.wizard.form</field>
        <field name="model">block.quantity.wizard</field>
        <field name="arch" type="xml">
            <form string="Block Product Quantity">
                <sheet>
                    <group>
                        <field name="product_id" readonly="1"/>
                        <field name="source_location_id"/>
                        <field name="blocked_location_id" readonly="1"/>
                        <field name="quantity"/>
                    </group>
                    <footer>
                        <button string="Confirm" type="object" name="action_confirm_block" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view to show the blocked quantity moves on clicking smart button -->
    <record id="view_blocked_quantity_tree" model="ir.ui.view">
        <field name="name">stock.quant.blocked.tree</field>
        <field name="model">stock.move</field>
        <field name="arch" type="xml">
            <list string="Blocked Quantity">
                <field name="product_id"/>
                <field name="product_uom_qty"/>
                <field name="product_uom"/>
                <field name="location_id" string="Source Location"/>
                <field name="location_dest_id" string="Destination Location"/>
                <field name="date"/>
            </list>
        </field>
    </record>

    <!-- Code to create custom location in Invetory: Blocked Quantity Goods -->
    <record id="stock_location_quantity_blocked" model="stock.location">
        <field name="name">Blocked Quantity Goods</field>
        <field name="usage">internal</field>
        <field name="location_id" ref="stock.stock_location_locations" /> 
    </record>
</odoo>